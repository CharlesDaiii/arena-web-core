{
  "title": "ARENAUI Prompt",
  "description": "ARENAUI element which displays prompt with button actions.",
  "allOf": [
    {
      "$ref": "./schemas/definitions-arena-object.json#/properties"
    },
    {
      "properties": {
        "data": {
          "allOf": [
            {
              "properties": {
                "object_type": {
                  "type": "string",
                  "title": "3D object type",
                  "description": "3D object type (derived from 'type' select above).",
                  "enum": [
                    "arenaui-prompt"
                  ]
                },
                "title": {
                  "type": "string",
                  "title": "Title",
                  "default": "Prompt"
                },
                "description": {
                  "type": "string",
                  "title": "Description",
                  "default": "This is a prompt. Please confirm or cancel."
                },
                "buttons": {
                  "type": "array",
                  "title": "Buttons",
                  "default": [
                    "Confirm",
                    "Cancel"
                  ],
                  "items": {
                    "type": "string"
                  }
                },
                "width": {
                  "type": "number",
                  "title": "Override width",
                  "default": 1.5
                },
                "font": {
                  "type": "string",
                  "title": "Font",
                  "description": "Font to use for button text",
                  "default": "Roboto",
                  "enum": [
                    "Roboto",
                    "Roboto-Mono"
                  ]
                }
              }
            },
            {
              "$ref": "./schemas/definitions-entity.json#/properties"
            },
            {
              "$ref": "./schemas/definitions-common.json#/properties"
            }
          ],
          "title": "Prompt Data",
          "additionalProperties": true,
          "default": {
            "object_type": "arenaui-prompt",
            "title": "Prompt",
            "description": "This is a prompt. Please confirm or cancel.",
            "buttons": [
              "Confirm",
              "Cancel"
            ],
            "width": 1.5,
            "position": {
              "x": 0,
              "y": 0,
              "z": 0
            },
            "rotation": {
              "w": 1,
              "x": 0,
              "y": 0,
              "z": 0
            }
          },
          "required": [
            "object_type",
            "title",
            "buttons",
            "width"
          ]
        }
      }
    }
  ],
  "required": [
    "object_id",
    "action",
    "type",
    "data",
    "persist"
  ]
}

